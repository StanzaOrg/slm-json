
; These compile instructions are for binary package build time.
; End-user slm packages will not have this include file.

; compile cJSON.c into a shared library
compile flag "-lstz-json" :
  on-platform :
    linux :
      "mkdir -p '{.}/build'"
      "cc -fPIC -rdynamic -shared -DPLATFORM_LINUX '-I{STANZA_CONFIG}/include' '{.}/src/cJSON.c' -o '{.}/build/libstz-json.so'"
    os-x :
      "mkdir -p '{.}/build'"
      "cc -fPIC -rdynamic -shared -DPLATFORM_OS_X '-I{STANZA_CONFIG}/include' '{.}/src/cJSON.c' -o '{.}/build/libstz-json.dylib'"
    windows :
      "mkdir {.}\\build"
      "gcc -Wl,--export-all-symbols -shared -DPLATFORM_WINDOWS '-I{STANZA_CONFIG}/include' '{.}/src/cJSON.c' -o '{.}/build/libstz-json.dll'"
